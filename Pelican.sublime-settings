{
    // Author
    // If empty, the Author metatag will be ommited (which you probably want if this a solo blog)
    "author" : "",

    // Paths. If at least one of these is not specified, you won't be able to finalize articles
    "blog_path_Windows" : "",
    "blog_path_Darwin" : "",
    "blog_path_Linux" : "",

    // This where articles will be stored until you finalize them using this tool.. or move them manually
    // This path is relative to your blog path. Example values would be content/drafts or drafts
    "draft_path" : "content/drafts",

    // Filenames
    // Tags supported : {title}, {date}, {slug}, {author}
    "article_file_name" : "{date}-{slug}",

    // Markdown file extension
    // Pelican use these : .md, .markdown, .mkd and .mdown
    // https://github.com/getpelican/pelican/blob/a07c0e6e042a0b7a26a7f97ebd5e5eb977eea160/pelican/readers.py#L245
    "markdown_extension" : ".md",

    // Commands Settings

    // If set to false, the 'New articles' commands will create a new buffer instead of a new file
    "create_file_on_article": true,

    // If set to true, the view will be scrolled to the date when the update date command is used
    "show_date_on_update": true
}
